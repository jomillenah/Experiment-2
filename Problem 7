#include <iostream>
#include <conio.h>

using namespace std;

int main()
{
    int x, sum;
    x = 0;
    sum = 0;
    
    cout << "Enter a number: ";
    cin >> x;
    
    while (x > 0)
    {
    for (int i = 1; i <= x; ++i)
	  {
    sum += i;
    }
    cout << "Sum of all whole numbers from 1 to "<< x << " is " << sum << "." << endl;
    cout << "Enter a number: ";
    cin >> x;
    sum = 0;
    }
      while (x>0);
	    { 
	    cout << "Thank you!";
	    }

	_getch();
  return 0;
}
